<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GET CRUD</title>
    <style>
        table, th, td {
          border:1px solid black;
        }

        .btn-edit{
            outline: none;
            border: none;
            background: orange;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-delete{
            outline: none;
            border: none;
            background: #ff0023;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>
          <th>Email</th>
          <th>Firstname</th>
          <th>lastName</th>
          <th>Address</th>
          <th>Actions</th>

        </tr>

        <% for(let i = 0 ; i < data.length ; i++) {
            %>
            <tr>
                <td><%= data[i].email %></td>
                <td><%= data[i].firstName %></td>
                <td><%= data[i].lastName %></td>
                <td><%= data[i].address %></td>
                <td>
                    <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit" type="button" >Edit</a>
                    <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete" type="button" >Delete</a>
                </td>
            </tr>
            <%
        }
        %>
   
      </table>
</body>
</html>